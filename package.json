{
  "name": "loom-css",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:components": "node scripts/build-all.js",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "publish:all": "node scripts/publish-all.js",
    "create:packages": "node scripts/create-individual-packages.js",
    "build:vue-components": "node scripts/build-vue-all.js",
    "publish:vue-all": "node scripts/publish-vue-all.js",
    "create:vue-packages": "node scripts/create-vue-individual-packages.js",
    "docs:dev": "docusaurus start",
    "docs:build": "docusaurus build",
    "docs:serve": "docusaurus serve",
    "docs:deploy": "docusaurus deploy",
    "docs:clear": "docusaurus clear",
    "deploy:react": "cd apps/web && npm run build && vercel --prod",
    "deploy:vue": "cd apps/vue-example && npm run build && netlify deploy --prod --dir=dist",
    "deploy:docs": "npm run docs:build && vercel --prod --cwd=.",
    "deploy:all": "npm run deploy:react && npm run deploy:vue && npm run deploy:docs"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "react-live": "^4.1.8",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/components/*",
    "packages/components-vue/*"
  ],
  "dependencies": {
    "@docusaurus/core": "^3.8.1",
    "@docusaurus/preset-classic": "^3.8.1",
    "@docusaurus/theme-live-codeblock": "^3.8.1",
    "@mdx-js/react": "^3.1.1",
    "prism-react-renderer": "^2.4.1"
  }
}
